        <item name="colorPrimary">#AE3939</item>
        <item name="colorPrimaryVariant">#AE3939</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F34444</item>
        <item name="colorSecondaryVariant">#F34444</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
